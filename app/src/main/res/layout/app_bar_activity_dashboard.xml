<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDashboard">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_activity_dashboard" />

    <ImageView
        android:id="@+id/imgEstadistica"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="175dp"
        app:srcCompat="@drawable/grafica_color_random" />

    <Button
        android:id="@+id/btnBasculaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="430dp"
        android:text="@string/btnBascula"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnBascula"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="400dp"
        android:cropToPadding="false"
        android:drawablePadding="8dp"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/escala" />

</android.support.design.widget.CoordinatorLayout>